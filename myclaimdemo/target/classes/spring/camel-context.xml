<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:camel="http://camel.apache.org/schema/spring"
    xmlns:cxf="http://camel.apache.org/schema/cxf" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="        
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd        
    http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd 
    http://camel.apache.org/schema/cxf http://camel.apache.org/schema/cxf/camel-cxf-spring.xsd">
    
   <cxf:cxfEndpoint id="claimEndpoint" address="/cxf/claim" serviceClass="org.redhat.demo.ClaimService" />
   
    <bean id="claimProcessor" class="org.redhat.demo.ClaimProcessor" />
    <camelContext id="camel" xmlns="http://camel.apache.org/schema/spring">
        <route id="cxfRoute">
	        <from uri="cxf:bean:claimEndpoint"/>
	        <log message="${header.operationName}"/>
	        <recipientList>
	            <simple>direct:${header.operationName}</simple>
	        </recipientList>
	    </route>
    		<route id="applyRoute">
        		<from uri="direct:apply"/>
        		<bean method="process" ref="claimProcessor"/>
    		</route>
	    <route id="cancelRoute">
	        <from uri="direct:cancel"/>
	        <bean method="cancel" ref="claimProcessor"/>
	    </route>
	   
    </camelContext>
</beans>
